# echo calls Compose to run the command "echo 'Hello, World!'" in a Docker container
echo:
	docker-compose run --rm alpine echo 'Hello, World! Custom built for <%= proj %>'

build:
	echo build 

test:
	echo test

deploy:
	echo deploy

help:
	echo '@todo implement a self-documenting help - for now try `make echo` for our hello world demo'